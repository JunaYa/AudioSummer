<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="audiosummer.github.me.audiosummer.StartActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:dividerPadding="4dp"
                      android:showDividers="middle"
                      android:paddingRight="16dp"
                      android:paddingLeft="16dp"
                      android:divider="@drawable/ic_divider"
                      android:orientation="vertical">

            <TextView
                android:id="@+id/tv_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/ic_item_bg"
                android:text="audio mix"/>

            <TextView
                android:id="@+id/btn_playback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_item_bg"
                android:gravity="center"
                android:text="audop track play"/>

            <TextView
                android:id="@+id/btn_media_extractor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/ic_item_bg"
                android:text="MeidaExtractor"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
